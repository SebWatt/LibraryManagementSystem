@model List<BorrowRequest>
<h1> These are your book requests.</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Book ID</th>
            <th>TimeDate</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BorrowRequest br in Model)
        {
            @if (br.IsApproved == "approved" || br.IsApproved == "pending")
            {
                <tr>
                    <th>@br.Id</th>
                    <td>@br.BookId</td>
                    <td>@br.DateTime</td>
                    <td>@br.IsApproved</td>
                </tr>
            }
        }
    </tbody>
</table>